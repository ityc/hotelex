.page{padding:25rpx;}
.page .title{font-weight:bold;padding:10rpx 0;}
/*表单  */
.form{margin:30rpx 0;}
.form .item:first-child{border:0}
.form .item{display:flex;border-top:1px solid #eee;font-size:28rpx;align-items:center;height:100rpx;}
.form text{display:block;width:120rpx;}
.form input{margin-left:50rpx;color:#666;}
.form .radio{display:inline-block;width:25rpx;height:25rpx;border:1px solid #eee;border-radius:50%;vertical-align:middle;cursor:pointer;margin-left:50rpx;}
.on{background-color:#BF9C5A;}
.form .self{border-top:1px solid #eee;display:flex;padding:20rpx 0;}
.form .self text{font-size:28rpx;display:block;width:120rpx;}
.form .self textarea{font-size:28rpx;height:120rpx;margin-left:50rpx;width:500rpx}
.form .img{border-top:1px solid #eee;padding:20rpx 0;}
.form .img text{font-size:28rpx;}
.form .img .msg{font-size:22rpx;color:#666;margin-top:10rpx;}
.form .img image{width:165rpx;height:220rpx;margin:20rpx 0;}
.submit{width:700rpx;height:80rpx;background-color:#BF9C5A;color:#fff;line-height:80rpx;text-align:center;border-radius:10rpx;}