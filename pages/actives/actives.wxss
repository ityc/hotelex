.header{margin:25rpx;}
.active{display:flex;border-bottom:1px solid #eee;padding-bottom:50rpx;}
.active image{width:180rpx;height:240rpx;}
.active .text{flex-direction:column;justify-content:space-between;display:flex;padding:0 10rpx;}
.active .title{font-size:32rpx;font-weight:bold;}
.active .price{font-size:28rpx;}
/* 中间内容部分 */
.details{margin:40rpx 0;}
.details .row{display:flex;margin:15rpx 0;}
.details .msg{width:80rpx;height:30rpx;background-color:#e4e4e4;font-size:20rpx;text-align:center;line-height:30rpx;border-radius:5rpx;}
.details .msg1{width:80rpx;height:30rpx;background-color:#E3F0C5;color:#58BC7D;margin:0 15rpx;}
.details .number{font-size:24rpx;margin-left:10rpx;}
.details .number text{color:#FE3365;font-weight:bold;}
.details .row text{font-size:24rpx;margin-right:15rpx;}
.cut{height:15rpx;background-color:#eee}
.content{margin:25rpx;font-size:24rpx;padding:10rpx 0 80rpx;}
.content .item{padding:20rpx 0;border-top:1px solid #eee;}
.content .name{font-weight:bold;font-size:32rpx;padding-bottom:20rpx;}
.content .item text{margin-right:10rpx;}
.content .item:first-child{border:0;}

/* 分享和收藏 */
.footer{height:80rpx;border-top:1px solid #eee;margin:25rpx 25rpx 0 25rpx;padding:10rpx 0;display:flex;position:fixed;bottom:0rpx;background-color:#fff;width:100%;}
.footer image{width:40rpx;height:40rpx;}
.footer text{font-size:22rpx;}
.footer .icon{display:flex;flex-direction:column;justify-content:center;align-items:center;padding:0 15rpx;}
.footer .button{width:500rpx;height:80rpx;background-color:#FE3F6D;color:#fff;line-height:80rpx;text-align:center;border-radius:50rpx;padding:0 20rpx;}

/*弹出框*/
.mask{width:100%;height:100%;background-color:#000;position:fixed;top:0;left:0;opacity:0.5;overflow:hidden;}
.choose{width:100%;height:800rpx;background-color:#fff;position:fixed;z-index:1;bottom:0;left:0;}
.choose .tit{font-size:32rpx;font-weight:bold;padding-bottom:30rpx;}
.choose .items{display:flex;}
.choose .step{width:200rpx;height:80rpx;font-size:26rpx;background-color:#eee;margin-right:15rpx;line-height:80rpx;padding-left:15rpx;}
.choose .row{margin:50rpx;}
.choose .choice{border-top:1px solid #eee;}
.tick{margin:50rpx 50rpx 0 50rpx;font-size:32rpx;font-weight:bold;}
.choice{padding:20rpx 50rpx;color:#999;display:flex;align-items:center;position:absolute;bottom:10px;left:0;}
.choice .but{width:500rpx;height:80rpx;color:#fff;line-height:80rpx;text-align:center;border-radius:50rpx;margin-left:40rpx;background-color:#C3A366;}
/*选中样式 */
.on{background-color:#C3A366!important;color:#fff;}