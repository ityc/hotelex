.page{padding: 30rpx}
.card{display: flex;padding:40rpx;margin-top: 20rpx;background: #fff;box-shadow: 0 0 8px rgba(0, 0, 0, 0.15);border-radius:10rpx;margin-bottom:35rpx}
.card .icon image{width: 110rpx;height: 110rpx;margin-right: 30rpx;border-radius: 50%}
.card .infos{flex: 1}
.card .info{font-size: 26rpx;line-height:35rpx;color: #888}
.card .tit{font-size:34rpx;font-weight: bold;color: #333;height:60rpx}
.card .see{font-size: 28rpx;color: #666;align-self: center}
.card .see image{width: 9rpx;height: 16rpx;margin-left: 10rpx}

.describe{margin-top:60rpx;font-size:28rpx;color: #666;line-height:40rpx;}
.describe .tit{margin-top:80rpx;font-size: 30rpx;height:60rpx}

.input input{border: 1px solid #ddd;height: 80rpx;line-height: 80rpx;margin-top:50rpx;padding: 0 10rpx;box-sizing: border-box;font-size: 30rpx;border-radius: 10rpx}
.place{color: #ccc}